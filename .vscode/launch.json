{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Web Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "build:web-assets"
    },
    {
      "name": "Launch Web Server (Custom Port)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "env": {
        "WEB_PORT": "5000"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "build:web-assets"
    }
  ],
  "compounds": [
    {
      "name": "Debug with Watchers",
      "configurations": ["Launch Web Server"],
      "preLaunchTask": "start:watchers",
      "stopAll": true
    }
  ]
}
