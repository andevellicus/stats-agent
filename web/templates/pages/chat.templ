package pages

import "stats-agent/web/templates/layout"
import "stats-agent/web/templates/components"

templ ChatPage(sessionID string) {
	@layout.Base("Chat") {
		<div class="flex flex-col h-full max-w-5xl mx-auto">
			<div id="messages" class="flex-1 overflow-y-auto p-6 space-y-6 scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-transparent">
				@components.WelcomeMessage()
			</div>
			<div class="p-6 bg-white/80 backdrop-blur-sm border-t border-gray-200/50 shadow-lg">
				@components.ChatForm(sessionID)
			</div>
		</div>
	}
}