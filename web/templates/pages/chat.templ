package pages

import "stats-agent/web/templates/layout"
import "stats-agent/web/templates/components"

templ ChatPage(sessionID string) {
	@layout.Base("Chat") {
		<div class="w-full h-full flex flex-col items-center justify-center p-4 space-y-6">
			@components.WelcomeMessage()

			<div class="flex flex-col-reverse w-full max-w-7xl md:max-h-[calc(100vh-22rem)] bg-white/60 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/50">
				<div class="p-6 border-t border-gray-200/50">
					@components.ChatForm(sessionID)
				</div>
				<div id="messages" class="flex-1 overflow-y-auto p-6 space-y-6 scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-transparent">
				</div>
			</div>
		</div>
	}
}