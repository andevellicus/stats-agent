package layout

// Import the components package
import "stats-agent/web/templates/components"

templ Base(title string) {
	<!DOCTYPE html>
	<html lang="en" class="h-full bg-gradient-to-br from-slate-50 to-blue-50">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title } - Pocket Statistician</title>
            <link rel="stylesheet" href="/static/css/output.css"/>
            <link rel="stylesheet" href="/static/vendor/github-dark.min.css"/>
            <script src="/static/vendor/htmx.min.js"></script>
            <script src="/static/vendor/marked.min.js"></script>
            <script src="/static/vendor/highlight.min.js"></script>
            <script src="/static/vendor/highlight-python.min.js"></script>
            <script src="/static/js/app.js" defer></script>
		</head>
		<body class="h-full font-sans antialiased text-gray-900 bg-gradient-to-br from-slate-50 to-blue-50">
			<div class="flex flex-col h-full overflow-hidden">
				// Call the new Header component - sticky at top
				<div class="flex-shrink-0">
					@components.Header("Pocket Statistician", "")
				</div>
				<main class="flex-1 overflow-hidden">
					{ children... }
				</main>
			</div>
			<div class="hidden">
				@components.PythonCodeBlockTemplate()
				@components.ExecutionResultBlockTemplate()
				@components.AgentStatus("")
				@components.ImageBlock("")
				@components.FileBadgeTemplate()
			</div>
		</body>
	</html>
}
