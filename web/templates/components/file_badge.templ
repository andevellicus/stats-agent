package components

templ FileBadge(filename string) {
	<div id="file-badge" class="inline-flex items-center justify-between bg-sky-100 text-primary text-sm font-semibold px-3 py-2 rounded-lg mb-2 border border-sky-200">
		<div class="flex items-center space-x-2">
			<span class="file-name">{ filename }</span>
		</div>
		<button type="button" class="remove-file-btn text-sky-500 hover:text-sky-700">
			<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path></svg>
		</button>
	</div>
}

// Template version for JavaScript cloning
templ FileBadgeTemplate() {
	<div id="file-badge-template">
		@FileBadge("")
	</div>
}