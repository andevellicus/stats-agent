package components

import "path/filepath"

templ ImageBlock(src string) {
	<div class="mt-4 rounded-2xl border border-gray-200 bg-white shadow-sm overflow-hidden">
		<div class="flex items-center justify-between px-5 py-3 bg-gray-50 border-b border-gray-200">
			<div class="flex items-center space-x-3">
				<svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
				</svg>
				<span class="block-title text-xs font-bold text-gray-700 uppercase tracking-wider font-mono">{ filepath.Base(src) }</span>
			</div>
			<div class="flex items-center space-x-4">
				<a href={ src } target="_blank" class="flex items-center space-x-2 text-xs font-medium text-gray-500 hover:text-indigo-600">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
					<span>Open</span>
				</a>
				<div class="flex items-center space-x-2 cursor-pointer" onclick="toggleCodeBlock(this)">
					<span class="action-text text-xs font-medium text-gray-500">Show</span>
					<svg class="chevron-icon w-4 h-4 text-gray-500 transform transition-transform" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
					</svg>
				</div>
			</div>
		</div>
		<div class="code-content p-4 bg-white flex justify-center hidden">
			<img src={ src } class="max-w-full h-auto rounded-lg shadow-md border border-gray-200"/>
		</div>
	</div>
}