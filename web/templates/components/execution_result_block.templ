package components

templ ExecutionResultBlock(content string) {
	<div id="execution-block-template" class="my-4 rounded-2xl border border-gray-200 bg-white shadow-sm overflow-hidden">
		<div class="flex items-center justify-between px-5 py-3 bg-gray-50 border-b border-gray-200 cursor-pointer" onclick="toggleCodeBlock(this)">
			<div class="flex items-center space-x-3">
				<svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 002-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
				</svg>
				<span class="block-title text-xs font-bold text-gray-700 uppercase tracking-wider font-mono">Execution Output</span>
			</div>
			<div class="flex items-center space-x-2">
				<span class="action-text text-xs font-medium text-gray-500">Hide</span>
				<svg class="chevron-icon w-4 h-4 text-gray-500 transform transition-transform rotate-180" viewBox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
				</svg>
			</div>
		</div>
		<div class="code-content p-4 bg-gray-100">
			<pre class="font-mono text-sm overflow-x-auto text-gray-600"><code>{ content }</code></pre>
		</div>
	</div>
}